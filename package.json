{
  "name": "devsaround",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "seed": "pnpm --filter @devsaround/api run seed",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:api": "cd apps/api && vercel --prod",
    "deploy:web": "cd apps/web && vercel --prod",
    "deploy:all": "pnpm run deploy:api && pnpm run deploy:web"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}