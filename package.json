{
  "name": "devsaround",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:web": "pnpm --filter @devsaround/web run dev",
    "dev:api": "pnpm --filter @devsaround/api run dev",
    "build": "turbo run build",
    "build:web": "pnpm --filter @devsaround/web run build",
    "build:api": "pnpm --filter @devsaround/api run build",
    "start": "concurrently \"pnpm:start:*\"",
    "start:web": "pnpm --filter @devsaround/web run start",
    "start:api": "pnpm --filter @devsaround/api run start",
    "lint": "turbo run lint",
    "lint:web": "pnpm --filter @devsaround/web run lint",
    "lint:api": "pnpm --filter @devsaround/api run lint",
    "test": "turbo run test",
    "test:web": "pnpm --filter @devsaround/web run test",
    "test:api": "pnpm --filter @devsaround/api run test",
    "seed": "pnpm --filter @devsaround/api run seed",
    "clean": "turbo run clean && rm -rf node_modules",
    "deploy:api": "cd apps/api && vercel --prod",
    "deploy:web": "cd apps/web && vercel --prod",
    "deploy:all": "pnpm run deploy:api && pnpm run deploy:web"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}